/* pages/community/index.wxss */
.page-container {
  background-color: #f7f8fa;
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 搜索框 */
.search-bar {
  padding: 16rpx 0;
}
.search-input {
  height: 72rpx;
  background-color: #fff;
  border-radius: 36rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 排序标签 */
.sort-tabs {
  display: flex;
  gap: 32rpx;
  padding: 24rpx 0;
}
.tab-item {
  font-size: 30rpx;
  color: #666;
  padding-bottom: 8rpx;
  border-bottom: 4rpx solid transparent;
}
.tab-item.active {
  color: #07c160;
  font-weight: bold;
  border-bottom-color: #07c160;
}

/* 问题列表 */
.question-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.question-item-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.question-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}
.tag {
  background-color: #eef2f5;
  color: #6a7c8c;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.meta-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.stats {
  display: flex;
  gap: 24rpx;
}

/* 发布按钮 */
.post-button {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx; /* 适配 tabBar 高度 */
  width: 100rpx;
  height: 100rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.4);
}
