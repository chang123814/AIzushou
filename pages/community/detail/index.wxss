/* pages/community/detail/index.wxss */
.page-container {
  padding: 32rpx;
  padding-bottom: 140rpx; /* 为底部输入框留出空间 */
  background-color: #f7f8fa;
}

/* 问题卡片 */
.question-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.avatar.small {
  width: 50rpx;
  height: 50rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.question-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.question-content {
  font-size: 30rpx;
  color: #555;
  line-height: 1.7;
  margin-bottom: 24rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.tag-item {
  background-color: #eef2f5;
  color: #6a7c8c;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.actions {
  display: flex;
  gap: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.action-item {
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  background-color: #f2f2f2;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}

.action-item.active {
  background-color: #fff4e0;
  color: #ff9700;
  font-weight: bold;
}

/* 回复区域 */
.answers-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.answer-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.answer-item:last-child {
  border-bottom: none;
}

.answer-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin: 12rpx 0;
  padding-left: 70rpx; /* for avatar indent */
}

.answer-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 70rpx;
}

.reply-btn {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
}

/* 嵌套回复 */
.nested-answers {
  padding-left: 70rpx;
  margin-top: 20rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
}
.answer-item.nested {
  padding: 20rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.answer-item.nested:last-child {
  border-bottom: none;
}
.nested .nickname{
  font-size: 26rpx;
}
.reply-to-text {
  font-size: 26rpx;
  color: #666;
  margin: 0 8rpx;
}
.nickname.reply-to {
  color: #007aff;
}

/* 底部输入框 */
.reply-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.reply-input {
  flex: 1;
  height: 72rpx;
  background-color: #f2f2f2;
  border-radius: 36rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  background-color: #07c160;
}
